<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_light"
    android:paddingTop="30dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:textAlignment="center"
            app:lottie_fileName="3070-loader-design-for-messages.json"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title Goes Here"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:justificationMode="inter_word"
        android:text="Description goes in here"
        />
    <EditText
        android:id="@+id/val_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/orange_dark"
        android:textColorHint="@color/grey_transparent"
        android:hint="Your text goes in here"
        android:padding="10dp"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        >


        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/grey_light"
            android:text="Cancel"
            android:textAlignment="center"
            android:elevation="40dp"
            android:textAllCaps="true"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:textColor="@color/white"
            android:text="Done"
            android:backgroundTint="@color/orange_dark"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:elevation="40dp"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>
